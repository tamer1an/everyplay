transform-rotate()
  -webkit-transform rotate(arguments)
  transform rotate(arguments)

text-select()
  -webkit-user-select arguments
  -khtml-user-select arguments
  -moz-user-select arguments
  -o-user-select arguments
  user-select arguments

corporate-1 = #2181cf
corporate-2 = #2c2c2d
br = 6px

body
  -webkit-font-smoothing antialiased

  > section[data-role="module"]
    padding 1%
    width 70%
    margin 0 auto
    font-family Arial, sans-serif

    aside
      padding-bottom 1%

      fieldset
        background-color whitesmoke
        border-radius br
        padding 1%
        width 20%
        border 1px solid corporate-1

header h1
  text-align center
  font-size 180%
  font-family Ubuntu, sans-serif
  background-color corporate-2
  height 37px
  padding 7px
  color #cccccc
  background-image url("https://static.everyplay.com/assets/img/new-web/logo-topbar.png")
  background-repeat no-repeat
  background-position: 20px 10px
  margin-bottom 15px

footer[data-role="video-single"]
    padding 10px
    margin 0 auto

    > video
      width 80%
      margin 2% 10%
      transform-rotate(180deg)

    details
      width 220px

section[data-role="content"] > div
    width 96%
    float left
    padding-top 10px

#videos
  padding 2%
  border-radius br
  max-width 1275px
  border 1px solid corporate-1

  ul li
    margin 1%
    height 259px
    width  23%

  ul li > div
    clear both

  ul li > div p
    clear both
    overflow hidden
    text-overflow ellipsis
    width 250px
    padding-top 5px

  ul li > div p:last-child
    font-weight bold

  span
    max-width 234px
    float left

  ul, li, div p, div img
    float left

  div img
    padding-right 10px

.selectable
  text-select(initial)

.unselectable
  text-select(none)

select:hover:invalid
    border 1px solid red !important

.hidden
  display none

.r
  float right

