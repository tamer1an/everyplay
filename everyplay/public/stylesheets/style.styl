transform-rotate()
  -webkit-transform rotate(arguments)
  transform rotate(arguments)

text-select()
  -webkit-user-select arguments
  -khtml-user-select arguments
  -moz-user-select arguments
  -o-user-select arguments
  user-select arguments

body > section[data-role="module"]
  padding 1%
  width 80%
  margin 0 auto
  font-family Arial, sans-serif

header h1
  text-align center
  font-size 180%

footer[data-role="single-video"]
    padding 10px
    margin 0 auto

    > video
      width 50%
      transform-rotate(180deg)
      margin-left 25%

section[data-role="content"] div
    width 100%
    float left
    padding-top 10px

#videos
  span
    max-width 234px
    float left

  div p, div img
    float left

  div img
    padding-right 10px

.selectable
  text-select(initial)

.unselectable
  text-select(none)

select:hover:invalid
    border 1px solid red !important

.hidden
    display none

.r
    float right
