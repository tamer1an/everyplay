.flexbox

  section

    #videos
      @media screen and (min-width: 800px)

        picture
          height: 160px

        ul li
          height 200px

        ul li > div p
          width  73%

      @media screen and (min-width: 600px)
        picture
          height: 230px

        ul li
          height 240px

        ul li > div p
          width 73%




